<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView android:id="@+id/departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"/>
    <TextView android:id="@+id/departure_time_ampm"
        android:layout_toRightOf="@id/departure_time"
        android:layout_alignBaseline="@id/departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView android:id="@+id/departure_time_type"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/departure_time"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

</RelativeLayout>