<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CampusZoneActionBar</item>
        <item name="actionBarStyle">@style/CampusZoneActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CampusZoneActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:backgroundStacked">@color/lineColorGreen</item>
        <item name="backgroundStacked">@color/lineColorGreen</item>

        <item name="android:actionBarTabStyle">@style/CampusZoneActionBarTabs</item>
        <item name="actionBarTabStyle">@style/CampusZoneActionBarTabs</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="CampusZoneActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@color/cardBackground</item>
    </style>

    <style name="StopCircleStyle">
        <item name="android:layout_width">@dimen/stop_circle_diameter</item>
        <item name="android:layout_height">@dimen/stop_circle_diameter</item>
        <item name="android:height">@dimen/stop_circle_diameter</item>
        <item name="android:layout_weight">0.33</item>
    </style>

    <style name="RouteDirectionLabel">
        <item name="android:textColor">@color/campusZoneTanForeground</item>
        <item name="android:textSize">@dimen/route_direction_fontsize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DepartureTimeText">
        <item name="android:textSize">@dimen/departure_time_fontsize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/departure_time_marginDecrease</item>
    </style>
    <style name="DepartureTimeTextLeft" parent="DepartureTimeText">
        <item name="android:layout_marginLeft">@dimen/departure_time_leftrightMargin</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="DepartureTimeTextRight" parent="DepartureTimeText">
        <item name="android:layout_marginRight">@dimen/departure_time_leftrightMargin</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="DepartureTimeLandContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/departure_time_landMargin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DepartureTimeDesc">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/departure_time_leftrightMargin</item>
        <item name="android:layout_marginRight">@dimen/departure_time_leftrightMargin</item>
        <item name="android:textSize">@dimen/departure_time_desc_fontsize</item>
    </style>

    <style name="GreenLineView">
        <item name="android:background">@color/lineColorGreen</item>
        <item name="android:layout_width">@dimen/green_line_width</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="GreenLineViewLand" parent="GreenLineView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/green_line_width</item>
    </style>

</resources>
